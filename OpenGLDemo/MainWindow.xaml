<Window x:Class="OpenGLDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        xmlns:local="clr-namespace:OpenGLDemo"
        mc:Ignorable="d"
        Height="800" Width="800"
        Title="MainWindow" KeyDown="Key_Capture" MouseMove="Mouse_Capture" ManipulationDelta="Mouse_Capture">
    <Grid>
        <wpf:OpenGLControl OpenGLDraw="OpenGLControl_OpenGLDraw"
                               OpenGLInitialized="OpenGLControl_OpenGLInitialized"
                               Resized="OpenGLControl_Resized"
                               DrawFPS="True"
                               Loaded="OpenGLControl_Loaded" OpenGLVersion="OpenGL4_4" FrameRate="10000" IsManipulationEnabled="True" ForceCursor="False"/>
    </Grid>
    
</Window>
